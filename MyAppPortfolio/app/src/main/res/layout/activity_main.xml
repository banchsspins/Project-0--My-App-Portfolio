<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="35dp"
        android:gravity="center"
        android:text="My Nanodegree Apps!"
        android:textSize="22sp"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ff9800"
        android:layout_marginBottom="5dp"
        android:text="Spotify Streamer"
        android:onClick="displayMesg1"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ff9800"
        android:layout_marginBottom="5dp"
        android:text="Scores App"
        android:onClick="displayMesg2"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ff9800"
        android:layout_marginBottom="5dp"
        android:text="Library App"
        android:onClick="displayMesg3"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ff9800"
        android:layout_marginBottom="5dp"
        android:text="Build it Bigger"
        android:onClick="displayMesg4"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ff9800"
        android:layout_marginBottom="5dp"
        android:text="Xyz Reader"
        android:onClick="displayMesg5"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#f44336"
        android:text="Capstone: My own app"
        android:onClick="displayMesg6"/>


</LinearLayout>
